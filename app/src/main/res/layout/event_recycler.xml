<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/relativelayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_speaker" />

            <RelativeLayout
                android:id="@+id/main_rel_content"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:background="#CCFF0000">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Contention"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading"
                    android:layout_centerHorizontal="true"
                    android:text="Round 1"
                    android:textColor="#fff"
                    android:textSize="18dp"

                    />

                <RelativeLayout
                    android:id="@+id/location_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp">

                    <ImageButton
                        android:id="@+id/icon_location"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_fire" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/icon_location"
                        android:text="LT Lawns"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#fff"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/category_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/location_rel"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/icon_category"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_access_time_black_24dp" />

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/icon_category"
                        android:text="Dance"
                        android:textColor="#fff"
                        android:textSize="16dp"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/time_rel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/time_1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"

                        android:text="10:00"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#fff" />

                    <ImageButton
                        android:id="@+id/icon_time"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_fire"

                        />

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>